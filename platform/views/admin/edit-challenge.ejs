<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>MSP CTF | Edit Challenge</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar animate-fade-in">
    <div class="nav-brand">
      <img src="/images/logo.png" alt="MSP Logo" class="nav-logo">
      <span>MSP CTF Admin</span>
    </div>
    <div class="nav-links">
      <a href="/admin" class="nav-link">Dashboard</a>
      <a href="/logout" class="nav-link" style="color: var(--msp-orange)">Logout</a>
    </div>
  </nav>

  <div class="container animate-fade-in delay-1" style="max-width: 800px;">
    <h1>Edit Challenge</h1>
    
    <% if (error) { %>
      <div class="alert alert-error"><%= error %></div>
    <% } %>

    <div class="glass-card">
      <form action="/admin/challenges/<%= challenge.id %>/edit" method="POST" enctype="multipart/form-data">
        <div class="form-group">
          <label for="title">Title</label>
          <input type="text" id="title" name="title" value="<%= challenge.title %>" required>
        </div>

        <div class="form-group">
          <label for="description">Description</label>
          <input type="text" id="description" name="description" value="<%= challenge.description %>" required>
        </div>

        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
          <div class="form-group">
            <label for="category">Category</label>
            <input type="text" id="category" name="category" value="<%= challenge.category %>" required>
          </div>
          <div class="form-group">
            <label for="points">Points</label>
            <input type="text" id="points" name="points" value="<%= challenge.points %>" pattern="[0-9]+" required>
          </div>
        </div>

        <div class="form-group">
          <label for="flag">Flag</label>
          <input type="text" id="flag" name="flag" value="<%= challenge.flag %>" required>
        </div>

        <div class="form-group">
          <label for="link">Link (Optional)</label>
          <input type="text" id="link" name="link" value="<%= challenge.link || '' %>">
        </div>

        <div class="form-group">
          <label for="file">File (Optional)</label>
          <% if (challenge.file) { %>
            <div style="margin-bottom: 0.5rem;">
              <span style="color: var(--text-secondary);">Current file:</span> 
              <a href="<%= challenge.file %>" target="_blank" style="color: var(--msp-yellow);"><%= challenge.file.split('/').pop() %></a>
            </div>
          <% } %>
          <input type="file" id="file" name="file" style="width: 100%; padding: 0.8rem; background: rgba(0,0,0,0.3); border: 1px solid rgba(255,255,255,0.1); border-radius: 12px; color: white;">
          <small style="color: var(--text-secondary); display: block; margin-top: 0.5rem;">Allowed: Images, PDF, TXT, Archives (ZIP, RAR, 7Z). Max: 50MB</small>
        </div>

        <div class="form-group">
          <label for="status">Status</label>
          <select id="status" name="status" style="width: 100%; padding: 0.8rem; background: rgba(0,0,0,0.3); border: 1px solid rgba(255,255,255,0.1); border-radius: 12px; color: white;">
            <option value="draft" <%= challenge.status === 'draft' ? 'selected' : '' %>>Draft</option>
            <option value="active" <%= challenge.status === 'active' ? 'selected' : '' %>>Active</option>
            <option value="ended" <%= challenge.status === 'ended' ? 'selected' : '' %>>Ended</option>
          </select>
        </div>

        <div style="margin-top: 2rem; display: flex; gap: 1rem;">
          <button type="submit" class="btn btn-primary">Save Changes</button>
          <a href="/admin" class="btn btn-secondary">Cancel</a>
        </div>
      </form>
    </div>
  </div>
  <script src="/background.js"></script>
</body>
</html>
